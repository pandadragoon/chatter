<%= render 'shared/header', header: "New Status" %>
<%= render 'shared/errors', obj: @status %>
<%= form_for @status, html: {class: "form-horizontal", role: 'form' } do |f| %>
  <div class="form-group">
    <%= f.label :body, ' ', class: "hide" %>
    <div class="col-sm-5">
      <%= f.text_area :body, value: "Chatter away!", class: 'form-control', rows: 5  %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-5">
      <%= f.submit "Create Status", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>