<h2><%= "@#{@user.username}" %>
<% if logged_in? && @user.username != current_user.username %>
  <% if !current_user.following_users.include?(@user) %>
    <span class="label label-info"><%= link_to "+ follow", follow_user_path(@user), method: 'post' %></span>
  <% else %>
    <span class="label label-danger"><%= link_to "unfollow", unfollow_user_path(@user), method: 'post' %></span>
  <% end %>
<% end %>
</h2>

<%= render 'shared/header', header: 'Statuses' %>
<% @user.statuses.each do |status| %>
  <div class="panel panel-default col-sm-7">
    <div class="panel-body"><%= render 'statuses/status', status: status %></div>
  </div>
<% end %>
