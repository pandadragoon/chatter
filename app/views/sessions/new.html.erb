<%= render 'shared/header', header: 'Login' %>
<div class="well">
<%= form_tag '/login', method: 'post', class: 'form-horizontal', role: 'form' do %>
  <div class="form-group">
    <%= label_tag :username, 'Username', class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= text_field_tag :username, '',class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag :password, 'Password', class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= password_field_tag :password, '', class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= submit_tag 'Login', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
</div>